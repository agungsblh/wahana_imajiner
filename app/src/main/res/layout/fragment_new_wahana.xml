<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.NewWahanaFragment">

    <FrameLayout
        android:background="@drawable/new_header_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Attractions"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/btn_back"
            android:layout_gravity="center|start"
            android:layout_marginStart="20dp"
            app:tint="@color/white"
            android:src="@drawable/ic_back"
            android:layout_width="33dp"
            android:layout_height="54dp"/>
    </FrameLayout>
    <ScrollView
        android:scrollbarSize="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                app:cardMaxElevation="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/new_gambar_wahana"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="195dp"/>

                    <TextView
                        android:text="Haunted House"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/heart_attack"
                        android:layout_marginHorizontal="20dp"
                        android:src="@drawable/new_heart_attack"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:text="Thrill"
                        android:textColor="@color/gray600"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:max="100"
                        android:progress="90"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_red" />
                    <TextView
                        android:text="Speed"
                        android:textColor="@color/gray600"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:max="100"
                        android:progress="25"
                        android:layout_marginBottom="20dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_green" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                app:cardMaxElevation="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/new_gambar_roller_coaster"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="195dp"/>

                    <TextView
                        android:text="Roller Coaster"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/heart_attack_r"
                        android:layout_marginHorizontal="20dp"
                        android:src="@drawable/new_heart_attack"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:text="Thrill"
                        android:textColor="@color/gray600"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:max="100"
                        android:progress="70"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_red" />
                    <TextView
                        android:text="Speed"
                        android:textColor="@color/gray600"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:max="100"
                        android:progress="90"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_marginBottom="20dp"
                        android:progressDrawable="@drawable/custom_progress_bar_red" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                app:cardMaxElevation="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/new_gambar_komedi_putar"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="195dp"/>

                    <TextView
                        android:text="Komedi Putar"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:text="Thrill"
                        android:textColor="@color/gray600"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:max="100"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progress="10"
                        android:progressDrawable="@drawable/custom_progress_bar_green" />
                    <TextView
                        android:text="Speed"
                        android:textColor="@color/gray600"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:max="100"
                        android:progress="50"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_marginBottom="20dp"
                        android:progressDrawable="@drawable/custom_progress_bar_yellow" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>




</LinearLayout>